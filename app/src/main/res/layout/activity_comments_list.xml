<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ui.activity.CommentsListActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/commentsList"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/comment_list_form"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/comment_list_form"
              android:layout_alignParentBottom="true"
              android:textColor="@android:color/black"
              android:hint="Enter comment text"
              android:layout_toLeftOf="@+id/comment_list_submit_button"
              android:layout_marginBottom="40dp"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_list_submit_button"
            android:text="Submit"
            android:layout_marginBottom="40dp"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

</RelativeLayout>
